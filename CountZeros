class CountZeros {
    public static void main(String[] args) {
        System.out.print(count(2001,0));
    }
    public static int count(int n, int count){
        if(n==0){
            return count;
        }
        int rem=n%10;
        if(rem==0){
            return count(n/10,count+1);
        }
        return count(n/10,count);
    }
}

output: 2
