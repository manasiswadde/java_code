class Palindrome_String{
    public static void main(String[] args) {
        String str="madam";
        String sb=new StringBuilder(str).reverse().toString();
        
        if(str.equals(sb)){
            System.out.print("palindrome");
        }
        else{
             System.out.print("not palindrome");
        }
        
    }
}

output: palindrome

class Palindrome {
    public static void main(String[] args) {
        System.out.print(pal(121));
    }
    public static String pal(int no){
        String str=Integer.toString(no);
        String s=new StringBuilder(str).reverse().toString();
        if(s.equals(str)){
            return "palindrome";
        }
        return "not palindrome";
    }
}
output:palindrome

class Palindrome {
    public static void main(String[] args) {
        System.out.print(pal(121));
    }
    public static String pal(int no){
       int temp=no;
       int rev=0;
       while(no>0){
           int num=no%10;
           rev=rev*10+num;
           no=no/10;
       }
       if(rev==temp){
           return "palindrome";
       }
       return "not palindrome";
    }
}
